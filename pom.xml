                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <distributionManagement>
                <repository>
                    <id>github</id>
                    <name>GitHub yakirChen Maven Packages</name>
                    <url>https://maven.pkg.github.com/yakirChen/jackson-mapper</url>
                </repository>
                <snapshotRepository>
                    <id>github</id>
                    <name>GitHub yakirChen Maven Packages</name>
                    <url>https://maven.pkg.github.com/yakirChen/jackson-mapper</url>
                </snapshotRepository>
            </distributionManagement>
        </profile>
    </profiles>

